# G-VET .env example - copy to .env and fill secrets
# Database
DB_NAME=gvet_system
DB_USER=root
DB_PASSWORD=
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DIALECT=mysql

# App
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# API
API_PREFIX=/api
API_VERSION=v1
ALLOWED_ORIGINS=http://localhost:3000

# Security
JWT_SECRET=change_this_strong_secret
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d
BCRYPT_ROUNDS=10

# Rate limiting
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Timezone
TZ=Asia/Kuala_Lumpur
# G-VET System Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gvet_system
DB_USER=gvet_user
DB_PASSWORD=your_secure_password_here
DB_DIALECT=mysql

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Session Configuration
SESSION_SECRET=your_session_secret_here

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=G-VET System <noreply@gvet.gov.my>

# Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# System Configuration
SYSTEM_NAME=G-VET ASSET & iSTOR SYSTEM
ORGANIZATION=Jabatan Perkhidmatan Veterinar Negeri Perak
TIMEZONE=Asia/Kuala_Lumpur

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# WebSocket Configuration
SOCKET_IO_PORT=3001

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# Development Mode
DEBUG=false
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Government Compliance
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=365
ENABLE_ENCRYPTION=true

# QR Code Configuration
QR_CODE_SIZE=300
QR_CODE_MARGIN=2

# Report Configuration
REPORT_LOGO_PATH=./static/images/logo.png
REPORT_FOOTER=Jabatan Perkhidmatan Veterinar Negeri Perak
