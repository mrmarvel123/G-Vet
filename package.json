{
  "name": "g-vet-system",
  "version": "2.0.0",
  "description": "G-VET ASSET & iSTOR SYSTEM - Malaysian Government Official Portal",
  "main": "electron-main.js",
  "homepage": "./",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron-dev": "electron .",
    "electron-build": "electron-builder",
    "electron-build-win": "electron-builder --win",
    "electron-build-all": "electron-builder -mwl",
    "release:gh": "gh release create v$npm_package_version dist/* --title \"G-VET System v$npm_package_version\" --notes-file RELEASE_NOTES.md || echo 'Ensure gh CLI is authenticated'",
    "package-artifacts": "powershell -Command \"if (Test-Path dist) { Remove-Item dist -Recurse -Force } ; Compress-Archive -Path dist/* -DestinationPath dist/G-VET-System-${npm_package_version}-artifacts.zip -Force\"",
    "migrate": "node database/migrate.js",
    "seed": "node database/seed.js",
    "reset-db": "npm run migrate && npm run seed",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "cleanup-backups": "node scripts/cleanup-backups.js",
    "build": "echo 'No build step required'",
    "prod": "NODE_ENV=production node server.js",
    "test": "echo 'Tests coming soon'",
    "lint": "eslint .",
    "setup": "npm install && npm run migrate && npm run seed && npm start",
    "health": "curl http://localhost:3000/api/health",
    "logs": "tail -f logs/app.log"
  },
  "keywords": [
    "asset-management",
    "inventory",
    "kew-pa",
    "kew-ps",
    "kew-ah",
    "government",
    "malaysia"
  ],
  "author": "Jabatan Perkhidmatan Veterinar Negeri Perak",
  "license": "PROPRIETARY",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.13.0",
    "qrcode": "^1.5.3",
    "sequelize": "^6.35.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "electron-updater": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "build": {
    "appId": "com.gvet.system",
    "productName": "G-VET System",
    "files": [
      "electron-main.js",
      "electron-preload.js",
      "server.js",
      "server-routes.js",
      "src",
      "controllers",
      "models",
      "routes",
      "middleware",
      "services",
      "validators",
      "config",
      "database",
      "public",
      "node_modules",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "certificateFile": null,
      "certificatePassword": null,
      "signingHashAlgorithms": [
        "sha256"
      ],
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "G-VET System"
    },
    "portable": {
      "artifactName": "G-VET-System-${version}-portable.${ext}"
    }
  }
}
